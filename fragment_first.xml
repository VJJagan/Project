<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout"
        android:background="@drawable/img_iphone_theme">
    <TextView
        android:id="@+id/timer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@color/white"
        android:text="@string/world_time" />

     <ImageView
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:src="@drawable/ic_facetime_img"
         android:layout_marginTop="50dp"
         android:layout_marginLeft="40dp"
         android:id="@+id/facetimeimg">
     </ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_calender_img"
            android:layout_alignLeft="@+id/facetimeimg"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/calenderimg">
        </ImageView>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="FaceTime"
          android:layout_below="@+id/facetimeimg"
            android:id="@+id/facetimetext"
          android:textSize="15dp"
          android:textColor="@color/white"
          android:layout_marginLeft="40dp"
          android:layout_marginTop="5dp">
      </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calender"
            android:id="@+id/calendertext"
            android:layout_below="@+id/calenderimg"
            android:layout_alignLeft="@+id/facetimetext"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="5dp">
        </TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_photos_img"
            android:layout_alignLeft="@+id/calenderimg"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/photosimg">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:id="@+id/photostext"
            android:layout_below="@+id/photosimg"
            android:layout_alignLeft="@+id/calendertext"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp">
        </TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_camera_img"
            android:layout_alignLeft="@+id/photosimg"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/cameraimg">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="camera"
            android:layout_below="@+id/photosimg"
            android:layout_alignLeft="@id/photostext"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp">
        </TextView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_my_resume"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/myresumeimg">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Resume"
            android:layout_below="@+id/myresumeimg"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>